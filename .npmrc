# This .npmrc file configures npm/pnpm behavior:
# - auto-install-peers=true: Automatically installs peer dependencies to avoid manual resolution
# - strict-peer-dependencies=false: Allows flexibility in peer dependency versions to prevent conflicts
# - shamefully-hoist=true: Hoists dependencies to node_modules root for better compatibility with tools
#   that expect dependencies in the root (common with Remix/React projects)

auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true 